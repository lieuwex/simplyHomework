body.aprilfools2016
	background-color: #32A8CE
	#app
		@media (min-width: 800px)
			animation: 1s ease-out 2s 1 forwards tilt
		@media screen and (max-width: 800px)
			animation: 1s ease-out 2s 1 forwards tilt-phone

@keyframes tilt {
	0% {
		transform: rotateZ(0)
	}
	100% {
		transform: rotateZ(1.4deg)
	}
}

@keyframes tilt-phone {
	0% {
		transform: rotateZ(0)
	}
	100% {
		transform: rotateZ(180deg)
	}
}
