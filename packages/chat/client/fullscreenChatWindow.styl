@require "jeet"

div#fullscreenChatWindow
	absolute: top left right bottom
	z-index: 299
	paddingSides = 200px // This is going to get messy.

	padding-top: 50px

	background-color: rgba(255, 255, 255, 0.9)
	animation: .5s fadeIn ease-out-expo // Fade in animation
	transition: .5s opacity ease-out-expo // For the fade out animation

	div#headerAsides
		div.userStatus
			absolute top 70px left 100px
			font-size: 25px
			font-weight: 300
			color: black
			opacity: .7

		div.userStatus.online
			color: #2ECC40
		div.userStatus.inactive
			color: #FF851B
		div.userStatus.offline
			color: #FF4136

		div.closeChat
			absolute: top 30px right 70px
			opacity: .7
			font-size: 50px
			font-weight: 300
			color: black
			cursor: pointer

	div#header
		position: relative
		height: 75px
		margin-bottom: 10px
		cursor: pointer

		margin-left: paddingSides
		margin-right: paddingSides

		div.profilePicture
			size = 75px
			width: size
			height: size
			overflow: hidden

			border: 1px lightgray solid

			img
				float: left
				margin: -.5px

		div.name
			absolute: top 15px left 90px
			display: inline-block
			font-weight: 300
			font-size: 30px

	div#chatMessages
		height: calc(100% - 155px)
		overflow: hidden
		overflow-y: scroll

		div.message
			padding: 5px
			font-size: 17px
			position: relative
			margin-left: paddingSides
			margin-right: paddingSides
			transition: .1s opacity ease-out

			aside
				position: absolute
				opacity: .3
				width: 165px

				transition: .1s opacity linear

				left: -170px
				right: initial

				text-align: right

				cursor: default

				.edited
					float: right
					margin-left: 5px
					margin-right: 0

				.readBy
					absolute: left -20px top 50%
					transform: translateY(-50%)

					img
						pointer-events: all

			aside:hover
				opacity: .8

			img.senderImage
				pointer-events all

			div.messageContent
				display: inline-block
				width: calc(100% - 40px)

				margin-left: 5px
				word-wrap: break-word

				text-align: left

				a.name
					color: black
					text-decoration: underline

		div.message.own
			aside
				left: initial
				right: -170px

				align(vertical)
				font-size: 15px
				text-align: left

				.edited
					float: left
					margin-left: 0
					margin-right: 5px

				.readBy
					absolute: right -20px top 50%
					left: initial
					transform: translateY(-50%)

					img
						pointer-events: all

			img.senderImage
				float: right

			div.messageContent
				margin-left: 0px
				margin-right: 5px

				text-align: right

				*
					margin: 0

		div.message.new
			aside
				opacity: 1

		div.message.pending
			animation: .1s ease-out .3s forwards dim

		div.loadMore
			text-align: center
			border: 1px lightgray solid
			margin-bottom: 10px

		div.loadMore:not(.loading)
			cursor: pointer

	div#footer
		position: relative
		inputWidth = 65%
		center(inputWidth)
		max-width: initial
		width: inputWidth
		border: 1px lightgray solid

		absolute: bottom 25px left right

		input
			width: 100%
			padding-left: 15px
			padding-right: 50px

			transition: .1s padding-right linear

			font-size: 20px
			outline: none !important
			border: none
			background-color: transparent

		button
			-webkit-appearance: none
			background-color: transparent
			absolute: top bottom right
			overflow: hidden
			width: 35px

			transition: .1s opacity, .1s width linear

			padding = 10px
			padding-left: padding
			padding-right: padding

			border: none
			border-left: 1px lightgray solid
			outline: none

			font-size: 20px
			line-height: 1

			#sendText
				absolute: right 35px top 6px
				font-size: 15px

			#sendIcon
				absolute: right 10px top 3px

		button:hover
			width: 115px

		button:hover ~ input
			padding-right: 130px

	div#footer.editing
		border-color: #848484
		button
			border-color: #848484

div.fullscreenChatWindow.fadeOut
	opacity: 0

@keyframes dim {
	0% {
		opacity: 1
	}
	100% {
		opacity: .6
	}
}
