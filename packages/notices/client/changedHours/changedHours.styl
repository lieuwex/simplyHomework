@require "../vars"

.changedHours
	.hourGroup
		opacity: .8
		margin-bottom: 10px

		.changedHour
			position: relative
			z-index: 0

			padding = 3px
			padding-top: padding
			padding-bottom: padding
			margin-bottom: 3px

			margin-left: -(noticePadding)
			margin-right: -(noticePadding)
			padding-left: noticePadding + 10
			padding-right: noticePadding

			cursor: pointer

			.back
				absolute: top left right bottom
				z-index: -1
				opacity: .2

			.diff
				padding-left: 10px
				margin: 0

				li
					list-style-type: none

					.prev
						text-decoration: line-through
						opacity: .7

	.hourGroup.today
		opacity: 1
