@require "/client/utils"
@require "jeet"

noticePadding = 15px

#overviewNotices
	margin-left: -25px
	margin-right: -25px
	-webkit-column-gap: 10px
	-moz-column-gap: 10px
	-moz-column-count: 3
	-webkit-column-count: 3
	-webkit-column-count: initial !important
	padding: 15px

	div.notice
		col(1/3, cycle: 3, gutter: 1)
		display: inline-block
		//width: 100%
		height: 100%

		border: 1px lightgray solid
		padding: noticePadding
		margin-bottom: 10px

		.header
			roboto(500)
			font-size: 25px
			padding: noticePadding
			margin: -(noticePadding)
			margin-bottom: -5px

			.subheader
				font-size: 65%
				opacity: .7

		+below(1000px)
			col(.5, cycle: 2, gutter: 1)
		+mobile()
			col(1, gutter: 1)

	div.notice.clickable
		cursor: pointer

	div.notice.clickable:hover
		border-color: black

	#nocardsnotice
		align()
		font-size: 20px
		color: gray
