@require "../vars"

.scrappedHours
	.hourGroup
		opacity: .8
		margin-bottom: 10px

		.scrappedHour
			position: relative
			z-index: 0

			padding = 3px
			padding-top: padding
			padding-bottom: padding

			fullNoticeWidth(10)

			cursor: pointer

			.back
				absolute: top left right bottom
				z-index: -1
				opacity: .2

	.hourGroup.today
		opacity: 1
