@require "./utils"

.noFontSmoothing
	-webkit-font-smoothing: initial
	-moz-osx-font-smoothing: initial

.unselectable
	user-select: none
	cursor: default

.largeTextOptimize
	text-rendering: optimizeLegibility !important

.robotoThin
	roboto(100)

.robotoHeader
	text-rendering: optimizeLegibility !important
	roboto(300)
	font-size: 40px

.smoothScroll
	+mobile()
		overflow-y: scroll
		-webkit-overflow-scrolling: touch

img
	pointer-events: none

html
	height: 100%

body
	height: 100%

	overflow: hidden
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0)
	-webkit-tap-highlight-color: transparent

	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale

	-webkit-backface-visibility: initial

	-webkit-overflow-scrolling: auto

button.btn-trans
	background-color: transparent
	color: white !important
	border-color: white !important
	border-radius: 0
	padding: 4px 35px
	font-family: 'Roboto', sans-serif
	font-weight: 100
	letter-spacing: 1px

button.btn-trans:hover
	background-color: rgba(0, 0, 0, 0.1)

button.btn-trans:active
	outline: none !important
	box-shadow: none !important
	background-color: rgba(0, 0, 0, 0.15) !important

button.btn-trans:focus
	outline: none !important

.appNameHeader
	color: white

.appNameHeader:before
	content: "simply"
	roboto(100)
	opacity: .6

.appNameHeader:after
	content: "Homework"
	font-family: Arial, "Helvetica Neue", Helvetica, 'Roboto', sans-serif
	opacity: .5
	margin-left: 3px

.appNameHeaderBig
	@extend .largeTextOptimize
	color: white
	font-size: 40px

.appNameHeaderBig:before
	roboto(100)
	content: "simply"

.appNameHeaderBig:after
	content: "Homework"
	font-family: Arial, "Helvetica Neue", Helvetica, 'Roboto', sans-serif
	opacity: .7
	margin-left: 3px

.appNameHeader.black:before,
.appNameHeaderBig.black:before,
.appNameHeader.black:after,
.appNameHeaderBig.black:after {
	color: black
}

div.modal
	overflow-y: auto

.container-fluid
	margin-top: -10px

// UA and platform specefic style tweaks.

body.win
	@extend .noFontSmoothing

	.robotoThin, .btn-trans
		font-weight: 300 !important

body.ie
	.vCenter
		position: relative !important

	#addProjectIcon
		padding-right: 30px !important

	.backdrop
		display: none
