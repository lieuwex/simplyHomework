simplyBlue = #32A8CE

roboto(weight)
	font-family: 'Roboto', sans-serif
	font-weight: weight

underlineInput(color = lightgray, width = 1px)
	border: 0px color solid;
	background-color: transparent;
	outline: none;
	border-bottom-width: width;

.unselectable
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none
	cursor: default

.largeTextOptimize
	text-rendering: optimizeLegibility !important

.robotoThin
	roboto(100)

.robotoHeader
	text-rendering: optimizeLegibility !important
	roboto(300)
	font-size: 40px

img
	pointer-events: none

body
	overflow-x: hidden
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0)
	-webkit-tap-highlight-color: transparent

html
	-webkit-text-size-adjust: 100%
	-ms-text-size-adjust: 100%

*
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale

button, input[type="submit"]
	-webkit-font-smoothing: initial

button.btn-trans
	background-color: transparent
	color: white
	border-color: white
	border-radius: 5px
	padding: 4px 35px
	font-family: 'Roboto', sans-serif
	font-weight: 100
	letter-spacing: 1px

button.btn-trans:hover
	color: #F0F0F0
	border-color: #E8E8E8

button.btn-trans:focus
	color: white
	border-color: white

.appNameHeader
	content: "simply"
	color: white
	roboto(100)

.appNameHeader:after
	content: "Homework"
	color: white
	font-family: Arial, "Helvetica Neue", Helvetica, 'Roboto', sans-serif
	opacity: .5
	margin-left: 3px

.appNameHeaderBig
	@extend .largeTextOptimize
	content: "simply"
	color: white
	font-family: 'Roboto', sans-serif
	font-weight: 100
	-webkit-font-smoothing: antialiased
	font-size: 40px

.appNameHeaderBig:after
	content: "Homework"
	color: white
	font-family: Arial, "Helvetica Neue", Helvetica, 'Roboto', sans-serif
	opacity: .7
	-webkit-font-smoothing: antialiased
	margin-left: 3px

div.cookiesContainer
	background-color: rgba(0, 0, 0, .8)
	position: fixed
	bottom: -40px
	width: 100vw
	color: white
	z-index: 500
	padding-left: 15px
	visibility: hidden

div.modal
	overflow-y: auto
