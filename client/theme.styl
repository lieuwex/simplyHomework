// == colors
errorColor = #F44336
errorFocusColor = darken(errorColor, 30%)
warningColor = #E09D3B
warningFocusColor = darken(warningColor, 30%)
successColor = #4CAF50
successFocusColor = darken(successColor, 30%)

// == functions
setFormColors(color, focusColor)
	label
		color: color

	.tt-menu
		border-color: focusColor

	input, select
		border-color: color

	input:focus, select:focus
		border-color focusColor

// == buttons
.btn:not(.btn-trans)
	padding: 5px 25px
	border: 1px lightgray solid
	border-radius: 0
	outline: none !important

.btn:not(.btn-trans):active
	box-shadow: none
	background-color: #dadada

// Dismiss buttons need to be less 'visible' than the 'main' button.
// Also contains colored buttons which also don't need a border.
.btn:not(.btn-trans)[data-dismiss],
.btn:not(.btn-trans)[data-bb-handler="main"], // BootBox dimiss buttons
.btn.btn-primary,
.btn.btn-danger,
.btn.btn-success {
	padding: 6px 26px
	border: 0
}

.btn.btn-primary:active
	background-color: #274F71

.btn.btn-danger:active
	background-color: #A83936

.btn.btn-success:active
	background-color: #397E39

// == bootstrap form fallback
.form-control
	-moz-appearance: none
	-webkit-appearance: none
	border-radius: 0
	border: 1px lightgray solid
	transition: none
	box-shadow: none

.form-control:focus
	border-color: darkgray
	box-shadow: none

.form-control.error
	border-color: errorColor
.form-control.error:focus
	border-color: errorFocusColor

.form-control.warning
	border-color: warningColor
.form-control.warning
	border-color: warningFocusColor

.form-control.success
	border-color: successColor
.form-control.success:focus
	border-color: successFocusColor

// == modals
.modal-content
	border: none
	border-radius: 0

// == tooltips
.tooltip-inner
	border-radius: 0
	background-color: rgba(0, 0, 0, .8)

.tooltip.top .tooltip-arrow,
.tooltip.top-left .tooltip-arrow,
.tooltip.top-right .tooltip-arrow {
	border-top-color: rgba(0, 0, 0, .8)
}

.tooltip.bottom .tooltip-arrow,
.tooltip.bottom-left .tooltip-arrow,
.tooltip.bottom-right .tooltip-arrow {
	border-bottom-color: rgba(0, 0, 0, .8)
}

.tooltip.left .tooltip-arrow
	border-left-color: rgba(0, 0, 0, .8)

.tooltip.right .tooltip-arrow
	border-right-color: rgba(0, 0, 0, .8)

.popover
	border-radius: 0

kbd // Stolen from StackExchange's stylesheet.
	display: inline-block
	margin: 0 .1em
	padding: .1em .6em

	background-color: #f7f7f7
	border: 1px solid #ccc
	border-radius: 3px
	box-shadow: 0 1px 0 rgba(0,0,0,0.2),0 0 0 2px #fff inset

	font-size: 11px
	font-family: Arial, Helvetica, sans-serif
	text-shadow: 0 1px 0 #fff
	color: #333
	line-height: 1.4
	white-space: nowrap

code
	color: #000
	background-color: #DCDCDC
	border-radius: 0

// == custom forms
form.vertical.full-width
	div.group
		width: 100%
		margin-bottom: 15px

		label
			width: 100%
			font-size: 12px

		input:not([type="checkbox"]), select
			// Remove default vender styling:
			-moz-appearance: none
			-webkit-appearance: none
			-webkit-border-radius: 0

			width: 100%
			font-size: 15px
			border: 1px lightgray solid
			outline: none

			padding: .2em
			padding-left: .5em
			padding-right: .5em

			background-color: white

		input:focus, select:focus
			border-color: darkgray

	div.group.select
		position: relative

	div.group.select:after
		absolute: top 70% right 1.25rem
		display: inline-block
		content: ""
		width: 0
		height: 0
		pointer-events: none

		border-top: .35rem solid
		border-right: .35rem solid transparent
		border-bottom: .35rem solid transparent
		border-left: .35rem solid transparent

	div.group.no-margin
		margin-bottom: 0px

	div.group.success
		setFormColors(successColor, successFocusColor)

	div.group.warning
		setFormColors(warningColor, warningFocusColor)

	div.group.error
		setFormColors(errorColor, errorFocusColor)

hr
	border: 0
	border-bottom: 1px lightgray solid

ul
	list-style-type: square
