@import "../main"

div.signUpForm
	opacity: 0
	visibility: hidden
	
	transition: .75s all ease-out-expo
	
	roboto(100)
	color: white
	font-size: 50px
	
	position: fixed
	top: 44%
	left: 50%
	width: 700px
	transform: translate(-50%, -50%) scale(2)

	input
		underlineInput(white)
		width: 100%
		
div.signUpForm.active
	opacity: 1
	transform: translate(-50%, -50%) scale(1)
	
div.Center
	opacity: 1
	transform: translate(-50%, -50%) scale(1)
	
	position: fixed
	top: 40%
	left: 50%
	
	transition: .75s all ease-out-expo
	
	div#quickLoginhint
		text-align: center
		color: white
		opacity: .5
		
		fixed: left 0 right 0 bottom -80px

div.Center.active
	opacity: .5
	top: 45%
	transform: translate(-50%, -50%) scale(.75)
	pointer-events: none