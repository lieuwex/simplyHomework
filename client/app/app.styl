notif(type)
	flash(type)
	z-index: 98888
	fixed: top 15px right 10px
	
	transform: translateY(-300px)
	opacity: 0

	transition: all 1.5s ease-out-expo

div.persistantNotification
	z-index: 98765
	fixed: top 15px right 10px
	position: fixed !important
	width: 300px

	transform: translateY(-300px)
	opacity: 0

	transition: all 1.5s ease-out-expo

	button
		margin: 3px

	div
		margin-bottom: -15px

div.persistantNotification.warn
	flash(warning)

div.persistantNotification.error
	flash(error)

div.persistantNotification.notice
	notice(width = false, color = #f5f5f5)

div.warningFlash
	notif(warning)

div.errorFlash
	notif(error)
	
div.noticeFlash
	notif(notice)

div.persistantNotification.transformIn,
div.warningFlash.transformIn,
div.errorFlash.transformIn,
div.noticeFlash.transformIn
	opacity: 1
	transform: translateY(0px)

div.classRemoveRow
	font-size: 15px

span#checkboxLabel
	font-weight: initial