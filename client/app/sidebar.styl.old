@import '../main'

.sidebar
	background-color: #2d2d2d
	width: 200px
	height: 100vh
	cursor: default

div.slider
	border: 0px simplyBlue solid
	border-left-width: 2px
	height: 55px
	position: absolute
	z-index: 10

div.classNotif
	border: 0px red solid
	border-left-width: 1px
	height: 55px
	position: absolute
	left: 0

.sidebarClasses
	overflow-y: auto
	overflow-x: hidden
	height: calc(100% - 240px)
	position: relative

.sidebarItem
	height: 50px
	color: white
	font-family: 'Roboto', sans-serif
	font-weight: 300
	-webkit-font-smoothing: antialiased
	font-size: 40px
	margin-left: 10px
	cursor: pointer
	margin-bottom: 10px

.sidebarAddClass
	margin-top: 10px
	position: relative
	left: 5%

.sidebarFooterAppNameHeader
	bottom: 0
	position: absolute
	margin-bottom: 3px
	margin-right: 6px
	right: 0

.sidebarFooterSettingsIcon
	background-image: url("images/ic_action_settings.png")
	width: 25px
	height: 25px
	background-repeat: no-repeat
	background-size: contain
	position: fixed
	left: 0
	bottom: 0
	cursor: pointer
	opacity: .6

.sidebarFooter
	margin-bottom: 2px
	width: 200px
	position: absolute
	bottom: 0

.sidebarFooterUserImage
	position: relative
	left: 30%
	border-radius: 50px
	-webkit-border-radius: 50px
	-moz-border-radius: 50px
	border: 1px gray solid
	pointer-events: initial
	cursor: pointer

p.sidebarFooterUserName
	font-size: 30px
	text-align: center
	color: white
	margin-bottom: 65px