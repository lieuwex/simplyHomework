@import "../../main"
@import "jeet"

div.head1
	span(8/12)
	float: left

div.head2
	span(4/12)

div.divider
	border: 0px lightgray solid
	border-bottom-width: 1px
	margin-left: -15px
	margin-right: -15px

div.overviewImportantContainer
	min-height: 150px
	margin-top: 10px
	position: relative
	overflow: hidden

	border: 1px lightgray solid
	border-radius: 5px

	div.overviewTimeIndicator
		font-weight: 100
		font-size: 60px
		margin-left: 15px
		display: inline-block
		
		span
			font-weight: 300

		+mobile()
			text-align: center
			display: block
			margin: 0
		
	div.overviewClassDescription
		font-size: 40px
		font-weight: 300
		margin-left: 90px
		display: inline-block
		position: absolute
		margin-top: 14px
		width: calc(100% - 185px)
		
		text-overflow: ellipsis
		overflow-x: hidden
		white-space: nowrap
		
		+mobile()
			text-align: center
			position: relative
			margin: 0
			width: 100%

	div.overviewClassLocation
		font-size: 25px
		font-weight: 100
		
		display: inline-block
		position: absolute
		margin-top: 25px
		margin-left: 15px

	div.overviewPersons
		absolute: right 0 left 20% bottom 0
		height: 70px
		overflow: hidden
		
		img
			border-radius: 50%
			margin-bottom: 10px
			pointer-events: initial
			
		+mobile()
			display: none

div.infoNextDayHeader
	width: 100%
	text-align: center
	font-size: 50px
	font-weight: 100
	margin-top: -5px

div.tasks
	font-size: 40px
	font-weight: 300

.itemContainerHeader
	font-size: 40px
	text-align: center
	position: absolute
	width: 100%
	display: inline-table
	margin-top: -50px

span#addProjectIcon
	color: gray
	vertical-align: middle
	font-size: 20px
	position: absolute
	//right: 20px
	right: 51px
	top: 20px
	cursor: pointer
	opacity: .5
	-moz-padding-end: 30px

div.projectRow
	padding-left: 10px
	overflow: hidden
	position: relative

	color: black

	white-space: nowrap
	text-overflow: ellipsis
	font-size: 18px
	roboto(300)

	div.projectRowBorder
		transition: all .1s linear

		absolute: top bottom left
		width: 1px

		background-color: #2ECC40

		span
			display: none

			color: white
			padding-left: 25px
			font-size: 25px
			line-height: 2

	span
		font-size: 35px
		font-weight: 600

div.projectRow:hover > div.projectRowBorder
	width: 5px

div.projectRowBorder:hover
	width: 100% !important
	span
		display: initial !important

div.taskRow
	margin-left: 5px
	margin-top: 10px

+mobile()
	.overviewHeader
		font-size: 30px !important

	div.overviewItemContainer
		height: initial !important
