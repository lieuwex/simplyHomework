@require "rupture"

sidebarWidth = 250px
borderColor = lightgray
headerHeight = 50px
sidebarItemHeight = 40px

#settings
	absolute: top left right bottom

	.settingsSidebar
		absolute: top left right
		width: sidebarWidth
		height: 100%
		background-color: #fff
		border-right: 1px borderColor solid

		+below(800px)
			width: 100%
			border: 0

		a
			text-decoration: none !important
			outline: none !important

		.header
			height: headerHeight
			background-color: #efefef
			border-bottom: 1px #d3d3d3 solid

			text-align: center
			font-size: 20px
			line-height: headerHeight

			+below(800px)
				display: none

		.item
			height: sidebarItemHeight
			padding-left: 10px
			border-bottom: 1px #DCDCDC solid

			line-height: sidebarItemHeight
			color: #000 !important
			font-size: 15px

			transition: .1s background-color linear

		.item:after
			content: ">"
			float: right
			padding-right: 10px
			color: #A9A9A9

		.item.current
			background-color: #E8E8E8

		logoutColor = #D9534F
		#logout
			absolute: left bottom right
			background-color: logoutColor
			border: 0
			color: white
			text-align: center
			height: sidebarItemHeight
			line-height: sidebarItemHeight
			cursor: pointer

		#logout:hover
			background-color: darken(logoutColor, 10%)

	.page
		padding = 15px

		absolute: top left sidebarWidth right bottom
		background-color: #fff
		z-index: 10

		overflow: hidden

		+below(800px)
			left: 0

		.header
			height: headerHeight
			padding-left: padding

			font-size: 30px
			background-color: #DEDEDE
			line-height: headerHeight

			#closeButton
				float: right
				margin-top: -3px
				font-size: 35px
				margin-right: 15px

				display: none
				+below(800px)
					display: block

			+below(800px)
				height: 35px
				line-height: 35px
				font-size: 25px

		.settingsContent
			absolute: top 50px left right bottom
			overflow-x: hidden
			overflow-y: scroll
			padding-top: 10px

			padding-left: padding
			padding-right: padding

			+below(800px)
				top: 35px
