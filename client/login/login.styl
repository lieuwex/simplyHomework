@require "../utils"
@require "jeet"

#loginPage
	color: white
	fixed: top left right bottom
	overflow-x: hidden
	overflow-y: auto

	#back, #overlay
		fixed: top left right bottom
		z-index: -1

	#overlay
		background-color: black
		opacity: .3

	#back
		background: url('/images/loginbg.jpg') no-repeat center center
		background-size: cover

	.appNameHeader
		color: #fff
		font-size: 1.8em
		margin-bottom: -40px
		margin-left: 10px

	.appNameHeader:before
		opacity: .6

	h1
		padding-top: 20px
		text-transform: uppercase
		font-weight: 600
		text-shadow: 0 3px 4px rgba(0,0,0,0.6), 0 1px 2px
		font-size: 3em
		text-align: center

	#loadingContainer
		fixed: top left right bottom
		background-color: rgba(0, 0, 0, 0.5)

		.spinner > div > div
			background-color: #fff !important

	#content
		#container
			max-width: 500px
			margin-left: auto
			margin-right: auto
			padding: 10px

			#buttons
				width: 100%
				height: 50px
			#buttons > a
				span(1/2)
				text-align: center
				font-size: 20px
				padding: 5px
				padding-top: 0

				color: white !important
				text-decoration: none !important
			#buttons > a.active
				border-bottom: 1px white solid

			fieldset
				min-width: 100%

				input:not([type="submit"])
					color: black

				input[type="submit"]
					float: right

	#content.loading
		display: none
