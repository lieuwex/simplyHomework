@require "../utils"
@require "jeet"

#loginPage
	color: white
	width: 100%
	height: 100%
	background: url('https://simplyhomework.nl/static/images/loginbg.jpg') no-repeat center center fixed
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: cover

	.appNameHeader
		fixed: top
		color: white
		font-size: 2em
		margin-left: 15px

	.appNameHeader:before
		opacity: .6

	.center
		width: 100%
		text-align: center

	h1
		padding-top: 20px
		text-transform: uppercase
		font-weight: 600
		text-shadow: 0 3px 4px rgba(0,0,0,0.6), 0 1px 2px
		font-size: 3em

	input:not([type="submit"])
		color: black

	#loginButton
		float: right
