@require '../utils'

#forgotPass
	text-align: center
	background-color: #C10C06
	height: 100vh

	img
		height: 70vh
		width: 65vh

	input
		font-size: 50px
		width: 100%
		color: white
		text-align: center
		margin-top: -50px
		underlineInput(darkred)

#resetPass
	h1
		font-size: 80px
		font-weight: 300
		text-align: center

	form
		max-width: 450px
		margin-left: auto
		margin-right: auto

		input[type="submit"]
			float: right

	#hintText
		opacity: .3
		animation: fadeIn 15s ease-in forwards

@keyframes fadeIn {
	0% {
		opacity: .3
	}

	100% {
		opacity: 1
	}
}
