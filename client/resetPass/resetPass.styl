#resetPass
	h1
		font-size: 80px
		font-weight: 300
		text-align: center

	form
		max-width: 450px
		margin-left: auto
		margin-right: auto

		input[type="submit"]
			float: right

	#hintText
		opacity: .3
		animation: fadeIn 15s ease-in forwards

@keyframes fadeIn {
	0% {
		opacity: .3
	}

	100% {
		opacity: 1
	}
}
